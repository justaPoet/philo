all : 			$(NAME)

philo:
	@${CC} ${SRC} ${CFLAGS} -o ${NAME}
	@echo $(BANNER)

re : 		fclean philo	
	@echo "\e[38;5;135m[โ restored]"  

clean:
	@echo "\e[38;5;135m[๐งน...cleaning]"
	@$(RM) philo

fclean: 	clean
	@$(RM) $(NAME)

.PHONY: 	fclean clean re all



